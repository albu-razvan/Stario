<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    app:carbon_maxHeight="400dp">

    <carbon.widget.RelativeLayout
        android:id="@+id/pinned_category_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/ripple"
        android:padding="7dp"
        app:carbon_cornerRadius="20dp">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/pinned_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:drawableStart="@drawable/ic_pin"
            android:drawablePadding="10dp"
            android:fontFamily="@font/dm_sans_medium"
            android:letterSpacing="-0.03"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/pinned_category"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp" />

    </carbon.widget.RelativeLayout>

    <carbon.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="never"
        app:carbon_cornerRadius="20dp"
        app:carbon_overScroll="never" />

</carbon.widget.LinearLayout>