<carbon.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple"
    android:forceDarkAllowed="false"
    android:gravity="center"
    app:carbon_cornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.stario.launcher.ui.common.FadingEdgeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:edge="left"
            app:size_left="400dp">

            <!-- Avoid pixel gaps -->
            <com.stario.launcher.ui.recyclers.UserTouchDisabledRecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1px" />

        </com.stario.launcher.ui.common.FadingEdgeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginRight="150dp"
        android:fontFamily="@font/dm_sans_medium"
        android:gravity="center_vertical|left"
        android:letterSpacing="-0.03"
        android:padding="25dp"
        android:shadowColor="?attr/colorSurfaceContainerHigh"
        android:shadowRadius="20"
        android:textColor="?attr/colorOnSurface"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</carbon.widget.ConstraintLayout>