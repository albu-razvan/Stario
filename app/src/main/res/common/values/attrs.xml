<resources>
    <declare-styleable name="AdaptiveIconView">
        <attr name="sizeRestricted" format="boolean" />
        <attr name="looseClipping" format="boolean" />
    </declare-styleable>
    <declare-styleable name="WaveUnderlineTextView">
        <attr name="waveColor" format="color" />
    </declare-styleable>
    <declare-styleable name="GlanceConstraintLayout">
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>
    <declare-styleable name="FadingEdgeLayout">
        <attr name="edge" format="integer">
            <flag name="top" value="1" />
            <flag name="bottom" value="2" />
            <flag name="left" value="4" />
            <flag name="right" value="8" />
        </attr>
        <attr name="size_top" format="dimension" />
        <attr name="size_bottom" format="dimension" />
        <attr name="size_left" format="dimension" />
        <attr name="size_right" format="dimension" />
        <attr name="is_rounded" format="boolean" />
    </declare-styleable>
</resources>