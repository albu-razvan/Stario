<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="7dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:forceDarkAllowed="false">

    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="0px"
        android:layout_height="0px"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="66dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.stario.launcher.ui.icons.AdaptiveIconView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintBottom_toBottomOf="@id/icon_container"
        app:layout_constraintEnd_toEndOf="@id/icon_container"
        app:layout_constraintStart_toStartOf="@id/icon_container"
        app:layout_constraintTop_toTopOf="@id/icon_container">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:alpha="0.7"
            android:background="@drawable/background_large_corners" />

        <com.stario.launcher.ui.recyclers.UserTouchDisabledRecyclerView
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>